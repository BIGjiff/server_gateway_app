<div class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-4">Benutzer bearbeiten</h1>

  <%= form_with(model: [:admin, @user], class: "space-y-4") do |f| %>
    <div>
      <%= f.label :username, "Benutzername", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :email, "E-Mail", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :role, "Rolle", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :role, User.roles.keys, {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div class="flex justify-between">
      <%= link_to "Abbrechen", admin_users_path, class: "bg-gray-300 hover:bg-gray-400 text-black px-4 py-2 rounded" %>
      <%= f.submit "Ã„nderungen speichern", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
