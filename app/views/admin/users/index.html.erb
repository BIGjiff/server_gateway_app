<h1>Benutzerverwaltung</h1>

<table>
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Rolle</th>
    <th>Aktionen</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "Bearbeiten", edit_admin_user_path(user) %> |
        <%= link_to "Löschen", admin_user_path(user),
                    method: :delete, data: { confirm: "Wirklich löschen?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Neuen Benutzer anlegen", new_admin_user_path %>
