<h2 class="text-2xl font-bold mb-6">Benutzer</h2>

<% if @users.any? %>
  <ul class="space-y-2">
    <% @users.each do |user| %>
      <li class="bg-white border border-gray-300 rounded-md shadow p-3 flex justify-between items-center">
        <span><%= user.email %></span>
        <%= link_to "Anzeigen", user_path(user), class: "text-blue-600 hover:underline ml-6" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="italic text-gray-500">Keine Benutzer vorhanden.</p>
<% end %>
