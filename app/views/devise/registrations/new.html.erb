<h2 class="text-2xl font-bold mb-6">Registrieren</h2>

<div class="bg-white border border-gray-300 rounded-md shadow p-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%# E-Mail %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, class: "w-full border rounded-md px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <%# Passwort %>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, class: "w-full border rounded-md px-3 py-2 focus:ring focus:ring-blue-300" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-1">Mindestens <%= @minimum_password_length %> Zeichen</p>
      <% end %>
    </div>

    <%# Passwort-BestÃ¤tigung %>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full border rounded-md px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <%# Submit Button %>
    <div class="flex justify-between items-center">
      <%= f.submit "Registrieren", class: "bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700" %>
      <%= link_to "ZurÃ¼ck zum Login", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
