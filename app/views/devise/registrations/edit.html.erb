<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6 mt-8">
  <h2 class="text-2xl font-bold mb-4">Account bearbeiten</h2>

  <%= form_for(resource, as: resource_name,
               url: registration_path(resource_name),
               html: { method: :put, class: "space-y-4" }) do |f| %>

    <div>
      <%= f.label :email, "E-Mail-Adresse", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-sm text-gray-500">
        Bestätigung ausstehend für: <%= resource.unconfirmed_email %>
      </p>
    <% end %>

    <div>
      <%= f.label :password, "Neues Passwort", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password",
                           placeholder: "leer lassen, wenn unverändert",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Passwort bestätigen", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :current_password, "Aktuelles Passwort", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :current_password, autocomplete: "current-password",
                           placeholder: "zur Bestätigung erforderlich",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div class="justify-end gap-6 mt-6">
      <%= f.submit "Änderungen speichern",
                   class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>

      <%= link_to "Abbrechen", root_path,
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>
