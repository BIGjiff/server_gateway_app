<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <h2 class="text-2xl font-bold mb-4">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
               html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, "E-Mail", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :password, "Passwort", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div class="flex justify-between items-center">
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Angemeldet bleiben" %>
      </div>
      <%= f.submit "Login",
                   class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <div class="mt-4 text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
