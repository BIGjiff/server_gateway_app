<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <h2 class="text-2xl font-bold mb-4">Neues Passwort setzen</h2>

  <%= form_for(resource, as: resource_name,
               url: password_path(resource_name),
               html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "Neues Passwort", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Passwort bestätigen",
                  class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                           class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Passwort ändern",
                   class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <div class="mt-4 text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
