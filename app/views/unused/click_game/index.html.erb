<h2 class="text-xl font-bold">Klicker-Spiel</h2>

<div data-controller="_click_game">
  <div data-_click_game-target="gameArea"
       class="relative w-full h-[400px] bg-gray-100 border rounded-md mt-4">
  </div>

  <p class="mt-4">
    Deine Punkte:
    <span data-_click_game-target="totalPoints"><%= current_user.points %></span>
  </p>
</div>

<% if current_user.points >= 500 %>
  <%= button_to "Darkmode umschalten",
                toggle_theme_click_game_index_path,
                method: :patch,
                class: "mt-4 bg-indigo-500 text-white px-4 py-2 rounded" %>
<% else %>
  <p class="mt-4 italic text-gray-500">Darkmode ab 500 Punkten freischalten </p>
<% end %>
<%= link_to "Rangliste ansehen", leaderboard_click_game_index_path,
            class: "mt-6 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>

<%= link_to "Rangliste ansehen", leaderboard_click_game_index_path,
            class: "block mt-4 text-blue-600 hover:underline" %>
