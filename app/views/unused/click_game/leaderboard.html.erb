<div data-controller="leaderboard">
  <ol class="space-y-2">
    <% @users.each_with_index do |user, index| %>
      <li class="flex justify-between items-center p-2 bg-gray-100 rounded shadow">
        <span class="font-semibold"><%= index + 1 %>. <%= user.email %></span>
        <span class="text-indigo-600 font-bold"><%= user.points %> Punkte</span>
      </li>
    <% end %>
  </ol>
</div>

