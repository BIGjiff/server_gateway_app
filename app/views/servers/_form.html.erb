<div class="bg-white border border-gray-300 rounded-xl shadow-md p-6 max-w-lg">
  <%= form_with(model: server, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, "Server-Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, [["Aktiv", "aktiv"], ["Inaktiv", "inaktiv"]],
                   {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex space-x-3">
      <%= f.submit " Speichern", class: "" %>
      <%= link_to " Abbrechen", servers_path, class: "" %>
    </div>
  <% end %>
</div>
