<h2 class="text-2xl font-semibold mb-6">Server</h2>

<div class="flex justify-end mb-6">
  <%= link_to "Neuer Server", new_server_path,
              class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
</div>

<% if @servers.any? %>
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <% @servers.each do |server| %>
      <div class="border border-gray-200 rounded-xl bg-white p-4 shadow-sm hover:shadow-md transition">
        <div class="flex justify-between items-center mb-3">
          <h3 class="font-semibold text-lg text-gray-800"><%= server.name %></h3>
          <span class="text-sm text-gray-500">
            <%= pluralize(server.gateways.count, "Gateway") %>
          </span>
        </div>

        <p class="text-sm text-gray-600 mb-3">
          <%= server.description.present? ? server.description : "Keine Beschreibung" %>
        </p>

        <div class="flex justify-end">
          <%= link_to "Details", server_path(server),
                      class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500 italic">Keine Server vorhanden.</p>
<% end %>
